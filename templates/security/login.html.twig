{% extends 'base-logout.html.twig' %}

{% block title %}Se connecter - TaskLinker{% endblock %}

{% block body %}
	<div class="auth-card">
		<h1>Se connecter</h1>

		{% if error %}
			<div class="flash flash-error">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<form method="post" action="{{ path('app_login') }}" class="auth-form">
			<div class="form-group">
				<label for="username">E-mail</label>
				<input type="email"
				       id="username"
				       name="_username"
				       value="{{ last_username }}"
				       placeholder="Entrez votre e-mail"
				       required
				       autocomplete="email">
			</div>

			<div class="form-group">
				<label for="password">Mot de passe</label>
				<input type="password"
				       id="password"
				       name="_password"
				       placeholder="Entrez votre mot de passe"
				       required
				       autocomplete="current-password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button type="submit" class="btn btn-primary btn-block">Continuer</button>
		</form>

		<p class="auth-link">
			Pas de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
		</p>
	</div>
{% endblock %}
